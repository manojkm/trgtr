    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Input Text Types</h5>
                    <div class="card__actions window ml-auto">
                        <a href="#" class="card__actions-item" data-card="collapse"><i class="icon-arrow-up"></i></a>
                        <a href="#" class="card__actions-item" data-card="fullscreen"><i
                                class="icon-size-fullscreen"></i></a>
                        <a href="#" class="card__actions-item" data-card="close"><i class="icon-close"></i></a>
                    </div>
                </div>
                <div class="card-body">
                    <form>
                        <div class="form-group row">
                            <label for="inputEmail" class="col-sm-2 col-form-label text-right ">Email</label>
                            <div class="col-sm-10">
                                <div class="input-group with-addon-icon-left mb-2">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text">
                                            <i class="icon-envelope"></i>
                                        </div>
                                    </div>
                                    <input class="form-control" type="email" value="bootstrap@example.com"
                                           placeholder="Email" id="inputEmail">
                                </div>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="inputURL" class="col-sm-2 col-form-label text-right ">URL</label>
                            <div class="col-sm-10">
                                <div class="input-group with-addon-icon-left mb-2">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text">
                                            <i class="icon-link"></i>
                                        </div>
                                    </div>
                                    <input class="form-control" type="url" value="https://getbootstrap.com"
                                           placeholder="URL" id="inputURL">
                                </div>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="inputPassword" class="col-sm-2 col-form-label text-right ">Password</label>
                            <div class="col-sm-10">
                                <div class="input-group with-addon-icon-left mb-2">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text">
                                            <i class="icon-lock"></i>
                                        </div>
                                    </div>
                                    <input class="form-control" type="password" value="password" id="inputPassword">
                                </div>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="inputNumber" class="col-sm-2 col-form-label text-right ">Number</label>
                            <div class="col-sm-10">
                                <input class="form-control" type="number" value="34" id="inputNumber">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="inputTelephone" class="col-sm-2 col-form-label text-right ">Telephone</label>
                            <div class="col-sm-10">
                                <div class="input-group with-addon-icon-left mb-2">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text">
                                            <i class="icon-phone"></i>
                                        </div>
                                    </div>
                                    <input class="form-control" type="tel" value="1-(555)-555-5555" id="inputTelephone">
                                </div>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="inputDateTime" class="col-2 col-form-label text-right">Date and time</label>
                            <div class="col-10">
                                <div class="input-group with-addon-icon-left mb-2">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text">
                                            <i class="icon-calendar"></i>
                                        </div>
                                    </div>
                                    <input class="form-control" type="datetime-local" id="inputDateTime">
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="inputDate" class="col-2 col-form-label text-right">Date</label>
                            <div class="col-10">
                                <div class="input-group with-addon-icon-left mb-2">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text">
                                            <i class="icon-calendar"></i>
                                        </div>
                                    </div>
                                    <input class="form-control" type="date" id="inputDate">
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="inputMonth" class="col-2 col-form-label text-right">Month</label>
                            <div class="col-10">
                                <div class="input-group with-addon-icon-left mb-2">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text">
                                            <i class="icon-calendar"></i>
                                        </div>
                                    </div>
                                    <input class="form-control" type="month" id="inputMonth">
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="inputWeek" class="col-2 col-form-label text-right">Week</label>
                            <div class="col-10">
                                <div class="input-group with-addon-icon-left mb-2">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text">
                                            <i class="icon-calendar"></i>
                                        </div>
                                    </div>
                                    <input class="form-control" type="week" id="inputWeek">
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="inputTime" class="col-2 col-form-label text-right">Time</label>
                            <div class="col-10">
                                <div class="input-group with-addon-icon-left mb-2">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text">
                                            <i class="icon-clock"></i>
                                        </div>
                                    </div>
                                    <input class="form-control" type="time" id="inputTime">
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="inputColor" class="col-2 col-form-label text-right">Color</label>
                            <div class="col-10">
                                <input class="form-control" type="color" value="#555555" id="inputColor"
                                       style="min-height: 40px;">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="inputRange" class="col-2 col-form-label text-right">Range</label>
                            <div class="col-10">
                                <input type="range" class="form-control" id="inputRange" value="50">
                            </div>
                        </div>


                    </form>
                </div>
            </div>
        </div>
    </div>


